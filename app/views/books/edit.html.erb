<h2>Editing Book</h2>
<span class="error-wrap">
  <% if @book.errors.any? %>
  <%= @book.errors.count %> error prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</span>
    
<%= form_with model: @book do |f| %>
  
<h4 class="title-form">Title</h4>
<%= f.text_field :title %>
  
<h4 class="body-form">Body</h4>
<%= f.text_area :body %>
    
<div class="btn">
  <%= f.submit 'Update Book' %>
</div>
<% end %>
    
   
  <%= link_to "Show", book_path(@book.id), class: "nav-link" %>
  <%= link_to "Back", "/books#index", class: "nav-link" %>
    