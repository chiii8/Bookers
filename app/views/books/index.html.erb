<body>
  <h1>Books</h1>
    <table>
      <thead>
        <tr><!-- 見出し-->
          <th class="text-center">Title</th>
          <th class="text-center">Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      
      <tbody>
        <tr><% @books.each do |book| %></tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td class="action"><%= link_to "Show", book_path(book.id) %></td>
          <td class="action"><%= link_to "Edit", edit_book_path(book.id) %></td>
          <td class="action"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
        <% end %>
      </tbody>
    </table>
    
    <h2>New book</h2>
    
     <span class="error-wrap">
        <% if @book.errors.any? %>
        <%= @book.errors.count %> error prohibited this book from being saved:
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </span>
      
    <%= form_with model: @book, url: '/books#show', method: :post do |f| %>
    
    <h4 class="title-form">Title</h4>
    <%= f.text_field :title %>
    <h4 class="body-form">Body</h4>
    <%= f.text_area :body %>
    <div class="btn">
    <%= f.submit 'Create book' %>
    </div>
    <% end %>
    
  </body>
</html>